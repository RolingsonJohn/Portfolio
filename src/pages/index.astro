---
import Layout from "../layouts/Layout.astro";
import Profile from "../components/Profile.astro";
import ExperinceList from "../components/ExperinceList.astro";
import Projects from "../components/Projects.astro";
import SectionContainer from "../components/SectionContainer.astro";
import AboutMe from "../components/AboutMe.astro";
import Formation from "../components/Formation.astro";
---

<Layout title="John Rolingson" description="Portfolio de John Rolingson">
	<main>
		<SectionContainer id="#" class="py-44 pb-20">
			<Profile />
		</SectionContainer>
		<SectionContainer id="projects">
			<h2
				class="w-full mx-auto lg:w-[740px] flex flex-col gap-8 text-3xl font-bold mb-8"
			>
				Proyectos
			</h2>
			<Projects />
		</SectionContainer>
		<SectionContainer id="experience">
			<h2 class="text-3xl font-bold mb-8">Experiencia</h2>
			<ExperinceList />
		</SectionContainer>
		<SectionContainer id="education">
			<h2 class="text-3xl font-bold mb-8">Formación</h2>
			<Formation />
		</SectionContainer>

		<SectionContainer id="about-me">
			<h2 class="text-3xl font-bold mb-8">Sobre mí</h2>
			<AboutMe />
		</SectionContainer>
	</main>
</Layout>
