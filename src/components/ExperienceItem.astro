---
interface Props {
    date: string;
    title: string;
    description: string;
    image?: string;
    link?: string;
}
const { date, title, description, image, link } = Astro.props;
---

<div
    class="absolute w-3 h-3 bg-neutral-quaternary rounded-full mt-1.5 -start-1.5 border border-buffer"
>
</div>
<div class="flex flex-row">
    <h3 class="text-lg font-semibold text-heading my-2">
        {title}
    </h3>
    <img
        class="ms-auto h-8 w-8 object-contain rounded-full"
        src={image}
        alt={title}
    />
</div>

<time class="text-sm font-normal leading-none text-body">{date}</time>

<p class="mb-4 text-base font-normal text-body">
    {description}
</p>
