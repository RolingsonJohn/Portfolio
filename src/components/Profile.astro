---
import Badge from "./Badge.astro";
import Social from "./SocialNetworks.astro";
import GithubIcon from "../icons/Github.astro";
import LinkedInIcon from "../icons/LinkedIn.astro";
import profile from "../assets/profile_picture.png";
import profileEs from "../i18n/es/profile.json";
import profileEn from "../i18n/en/profile.json";

type Lang = "es" | "en";
const { lang = "es" } = Astro.props as { lang?: Lang };
const t = lang === "en" ? profileEn : profileEs;
---

<div class="flex flex-col md:flex-row gap-8">
    <div class="flex flex-col">
        <h1 class="text-white text-5xl font-bold md:text-left">
            {t.name}
        </h1>
        <a
            href="https://www.linkedin.com/in/john-ander-rolingson-avellanal-79b2271ba/"
            target="_blank"
            rel="noopener"
            class="items-center mt-4"
        >
            <Badge>{t.badge}</Badge>
        </a>
    </div>

    <img class="rounded-full size-20" src={profile.src} alt={t.aria.profilePhoto} />
</div>

<h2
    id="profile-description"
    class="text-2xl opacity-80 [&>strong]:text-yellow-500 dark:[&>strong]:text-yellow-100 [&>strong]:font-normal [&>strong]:font-mono text-pretty"
>
    <strong>{t.description.role}</strong> {t.description.intro}
    <strong>{t.description.focus}</strong>{t.description.suffix}
</h2>

<nav class="flex flex-wrap gap-4 mt-8">
    <Social
        title={t.social.linkedin}
        href="https://www.linkedin.com/in/john-ander-rolingson-avellanal-79b2271ba/"
    >
        <LinkedInIcon class="w-6 h-6">{t.social.linkedin}</LinkedInIcon>
    </Social>
    <Social
        title={t.social.github}
        href="https://github.com/RolingsonJohn?tab=repositories"
    >
        <GithubIcon class="w-6 h-6">{t.social.github}</GithubIcon>
    </Social>
</nav>
