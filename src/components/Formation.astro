---
import ExperienceItem from "./ExperienceItem.astro";
import formationEs from "../i18n/es/formation.json";
import formationEn from "../i18n/en/formation.json";
const base = import.meta.env.BASE_URL;

type Lang = "es" | "en";
const { lang = "es" } = Astro.props as { lang?: Lang };
const formationData = lang === "en" ? formationEn : formationEs;

const FORMATION = formationData.items.map((item) => ({
    ...item,
    image: item.id === "uam" ? `${base}/institutions/uam-logo.webp` : "",
}));
---

<ol class="relative border-s border-default mb-10">
    {
        FORMATION.map((formation) => (
            <li class="mb-10 ms-4">
                <ExperienceItem {...formation} />
            </li>
        ))
    }
</ol>
