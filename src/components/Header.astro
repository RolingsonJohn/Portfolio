---
import navEs from "../i18n/es/nav.json";
import navEn from "../i18n/en/nav.json";
const rawBase = import.meta.env.BASE_URL;
const base = rawBase.endsWith("/") ? rawBase : `${rawBase}/`;

type Lang = "es" | "en";
const { lang = "es" } = Astro.props as { lang?: Lang };

const nav = lang === "en" ? navEn : navEs;

const navItems = [
    { title: nav.projects, label: "projects", url: `${base}#projects` },
    { title: nav.experience, label: "experience", url: `${base}#experience` },
    { title: nav.formation, label: "education", url: `${base}#education` },
    { title: nav.aboutMe, label: "about-me", url: `${base}#about-me` },
    {
        title: nav.contact,
        label: "contact",
        url: "mailto:rolingson.john@gmail.com",
    },
];

const esUrl = base;
const enUrl = `${base}en/`;
---

<header
    class="fixed top-0 z-10 flex items-center justify-center w-full mx-auto mt-2"
>
    <nav
        class="flex px-3 text-sm font-medium rounded-full text-gray-600 dark:text-gray-200 justify-center items-center"
    >
        {
            navItems.map((link) => (
                <a
                    class="relative block px-2 py-2 transition hover:text-blue-500 dark:hover:text-blue-500"
                    aria-label={link.label}
                    href={link.url}
                >
                    {link.title}
                </a>
            ))
        }

        <details class="relative ml-4">
            <summary
                class="flex items-center gap-1 cursor-pointer select-none px-2 py-1 rounded-full bg-white/70 dark:bg-black/40 shadow-sm"
            >
                <span class="text-xs uppercase tracking-wide">
                    {lang === "en" ? "EN" : "ES"}
                </span>
            </summary>
            <div
                class="absolute right-0 mt-2 w-28 rounded-md bg-white dark:bg-zinc-900 shadow-lg ring-1 ring-black/5 py-1 text-sm z-20"
            >
                <a
                    href={esUrl}
                    class="flex items-center gap-2 px-3 py-1 hover:bg-zinc-100 dark:hover:bg-zinc-800"
                >
                    <span aria-hidden="true">ðŸ‡ªðŸ‡¸</span>
                    <span>EspaÃ±ol</span>
                </a>
                <a
                    href={enUrl}
                    class="flex items-center gap-2 px-3 py-1 hover:bg-zinc-100 dark:hover:bg-zinc-800"
                >
                    <span aria-hidden="true">ðŸ‡¬ðŸ‡§</span>
                    <span>English</span>
                </a>
            </div>
        </details>
    </nav>
</header>

<script>
    document.addEventListener("astro:page-load", () => {
        const sections = document.querySelectorAll("section");
        const navItems = document.querySelectorAll("header nav a");

        const callback = (entries: any[]) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    navItems.forEach((item) => {
                        if (
                            item.getAttribute("aria-label") == entry.target.id
                        ) {
                            item.classList.add("text-blue-500");
                        } else {
                            item.classList.remove("text-blue-500");
                        }
                    });
                }
            });
        };

        const observer = new IntersectionObserver(callback, {
            root: null,
            rootMargin: "0px",
            threshold: 0.3,
        });

        sections.forEach((section) => {
            observer.observe(section);
        });

        // Cleanup function
        document.onvisibilitychange = () => {
            if (document.visibilityState === "hidden") {
                observer.disconnect();
            } else {
                sections.forEach((section) => {
                    observer.observe(section);
                });
            }
        };
    });
</script>

<style>
    nav {
        animation: nav-shadown 1s linear both;
        animation-timeline: scroll();
        animation-range: 0 100px;
    }

    @keyframes nav-shadown {
        0% {
            background-color: transparent;
            backdrop-filter: blur(0px);
        }
        100% {
            background-color: rgba(255, 255, 255, 0.1);
            backdrop-filter: blur(20px);
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.1);
        }
    }

    @media (prefers-color-scheme: dark) {
        @keyframes nav-shadown {
            0% {
                background-color: transparent;
                backdrop-filter: blur(0px);
            }
            100% {
                background-color: rgba(0, 0, 0, 0.5);
                backdrop-filter: blur(20px);
                border: 1px solid rgba(255, 255, 255, 0.1);
                box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.37);
            }
        }
    }
</style>
